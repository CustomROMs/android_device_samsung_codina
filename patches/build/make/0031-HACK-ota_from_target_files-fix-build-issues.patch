   def SetPermissions(self, fn, uid, gid, mode, selabel, capabilities):
     """Set file ownership and permissions."""
+    if fn == "/system":
+      uid = 0
+      gid = 0
+      mode = 0755
+      selabel = "u:object_r:system_file:s0"
+      capabilities = "0x0"
+    elif selabel is None:
