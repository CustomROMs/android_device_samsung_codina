 1 file changed, 1 insertion(+), 5 deletions(-)

diff --git a/graphics/common/1.0/types.hal b/graphics/common/1.0/types.hal
index 3369fad5..7c04706c 100644
--- a/graphics/common/1.0/types.hal
+++ b/graphics/common/1.0/types.hal
@@ -422,7 +422,7 @@ enum PixelFormat : int32_t {
 /**
  * Buffer usage definitions.
  */
-enum BufferUsage : uint64_t {
+enum BufferUsage : uint32_t {
     /** bit 0-3 is an enum */
     CPU_READ_MASK   = 0xfULL,
     /** buffer is never read by CPU */
@@ -497,10 +497,6 @@ enum BufferUsage : uint64_t {
